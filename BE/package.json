{
  "name": "be",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --experimental-specifier-resolution=node src/app.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:reset": "docker-compose -f docker-compose.test.yml down -v && docker-compose -f docker-compose.test.yml up -d",
    "db:test": "node test-db.js",
    "db:setup-affiliates": "node db-management/setup-affiliate-sites.js",
    "db:setup-affiliates:force": "node db-management/setup-affiliate-sites.js --force",
    "db:reset": "node db-management/complete-reset.js",
    "db:seed": "node db-management/seed-data.js",
    "db:seed:force": "node db-management/seed-data.js --force",
    "db:reset-admin": "node db-management/reset-superadmin.js",
    "db:cleanup": "node db-management/cleanup.js",
    "db:cleanup:all": "node db-management/cleanup.js --all",
    "db:cleanup:test": "node db-management/cleanup.js --test-data --old-otps",
    "db:setup-auth": "node db-management/setup-mongodb-auth.js",
    "db:setup-initial": "node db-management/setup-initial-data.js",
    "setup:production": "npm run db:setup-auth && npm run db:setup-initial",
    "auto-update": "node src/scripts/autoUpdateService.js",
    "test:auto-update": "node test-auto-update.js",
    "seed:demo": "node src/seeds/seed.demo.js",
    "seed:test": "node src/seeds/seedTestData.js",
    "seed:grades": "node src/seeds/seed.grades.js",
    "migration:manager": "node src/scripts/migration-manager.js",
    "migration:run": "node src/scripts/migrate-all.js",
    "migration:run:dry": "node src/scripts/migrate-all.js --dry-run",
    "migration:test": "node src/scripts/test-migration.js",
    "migration:rollback": "node src/scripts/rollback-migration.js",
    "migration:update-controllers": "node src/scripts/update-controllers.js",
    "postgres:sync": "node -e \"import('./src/models/postgres/index.js').then(m => m.syncModels())\"",
    "postgres:sync:force": "node -e \"import('./src/models/postgres/index.js').then(m => m.syncModels(true))\"",
    "postgres:start": "docker-compose -f docker-compose.postgres.yml up -d",
    "postgres:stop": "docker-compose -f docker-compose.postgres.yml down",
    "postgres:logs": "docker-compose -f docker-compose.postgres.yml logs -f",
    "postgres:test": "node test-postgres-connection.js",
    "postgres:reset": "docker-compose -f docker-compose.postgres.yml down -v && docker-compose -f docker-compose.postgres.yml up -d"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "expr-eval": "^2.0.2",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "mongoose-paginate-v2": "^1.9.0",
    "multer": "^2.0.1",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.9",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.3",
    "v": "^0.3.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "cross-env": "^7.0.3",
    "jest": "^30.0.3",
    "supertest": "^7.1.1",
    "vite-plugin-node": "^5.0.1"
  }
}
